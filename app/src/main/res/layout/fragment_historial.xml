<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aplicación="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".Fragmentos.Historial">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/PARTE00"
           android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            aplicación:layout_heightPercent="6%"
            aplicación:layout_widthPercent="100%">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@mipmap/foto"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Txt_texto_flotas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Selecciona una Flota"
                    android:textColor="#f2f0f0"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/Sp_Flotas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:background="@drawable/spinner_style"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PARTE0"
            android:layout_below="@id/PARTE00"
               android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            aplicación:layout_heightPercent="6%"
            aplicación:layout_widthPercent="100%">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@mipmap/foto"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Txt_texto_vehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Selecciona un Vehiculo"
                    android:textColor="#f7f4f4"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/Sp_Vehiculos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:background="@drawable/spinner_style"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PARTE1"
            android:layout_below="@+id/PARTE0"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            aplicación:layout_heightPercent="12%"
            aplicación:layout_widthPercent="100%"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:gravity="center_vertical"
                        android:text="Inicio: "
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp">


                        <TextView
                            android:id="@+id/Edit_inicio_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:text="2017-10-26"
                            android:gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/today"
                            android:foreground="?attr/selectableItemBackground"

                            android:textColor="#4d4d4d"
                            android:textSize="12sp" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/Edit_inicio_hora"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:text="13:10:10"
                            android:textColor="#4d4d4d"
                            android:gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/time"
                            android:textSize="12sp"
                            android:foreground="?attr/selectableItemBackground"  />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1.6"
                        android:text="Final: "
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/Edit_fin_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:text="2017-10-26"
                            android:textColor="#4d4d4d"
                            android:drawableLeft="@drawable/today"
                            android:gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:textSize="12sp"
                            android:foreground="?attr/selectableItemBackground"  />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:layout_marginLeft="5dp"
                         >

                        <TextView
                            android:id="@+id/Edit_fin_hora"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:text="23:00:10"
                            android:textColor="#4d4d4d"
                            android:gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/time"
                            android:textSize="12sp"
                            android:foreground="?attr/selectableItemBackground"  />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:gravity="right"
                android:layout_weight="6"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Img_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/consulta"
                    android:foreground="?attr/selectableItemBackground"/>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/PARTE2"
            android:layout_below="@+id/PARTE1"
            android:layout_weight="1"
            android:orientation="horizontal"
            aplicación:layout_heightPercent="78%"
            aplicación:layout_widthPercent="100%">


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/PARTE8"
            android:layout_below="@id/PARTE1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"

            android:orientation="vertical"
            aplicación:layout_heightPercent="5%"
            aplicación:layout_widthPercent="100%">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Txt_tiempo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:text="00:00:00"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/overlay"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:text="00:00:00"
                    android:textColor="#fff"
                    android:textSize="13sp"

                    android:background="@drawable/overlay"
                    android:textStyle="bold"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/overlay"
                    android:layout_weight="2.1"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Tipo de mapa"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp"

                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/Sp_Ve"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/map_types_list"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_style"
                        ></Spinner>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</FrameLayout>